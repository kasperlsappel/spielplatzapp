extends layout

block content
    div.p-0.m-0(style="height:200px;width:100%")
        a(onclick="showDiv();")
            div.w-100.h-100.d-inline-block(style="background-image: url('/images/karte1a.png'); background-size: cover;")
    div.small.text-center.pl-3.pr-3 Bitte w√§hle einen Spielplatz auf der Karte aus.            

    div#f2(style="visibility:hidden").p-3
        div
            h2 Quartier am Turm
        div
            form(action="danke" autocomplete="off")
                div.w-100.pt-3
                    input.form-control-lg(type="text", name="Problem", placeholder="Problem")
                div.w-100.pt-3
                    textarea.form-control-lg(name="Beschreibung", cols="20", rows="10" placeholder="Beschreibung")
                div.w-100.pt-3
                    input.form-control-file.form-control-file-lg(type="file", name="Bild", placeholder="Bild") 
                div.w-100.pt-3
                    input.btn-lg.btn-success.btn(type="submit", value="Abschicken")               


        div.p-3
        div.p-3
            h3 Letze Meldungen
        div.w-100
            table.table
                tbody
                    tr 
                        th.w-50 Problem
                        th.w-50 Status
                    tr
                        td Ruschte defekt
                        td.alert.alert-success erledigt

           
